<header>
  <h1><i class="fas fa-graduation-cap"></i> Gamified Learning - EndPlastic App</h1>
  <p>Test your knowledge and earn rewards for tackling plastic pollution!</p>
</header>

<section class="game-section">
  <div class="quiz-title">üß† Test Your Knowledge: Plastic Prevention Methods</div>

  <div class="quiz-question">
    <p>What is one effective way to reduce plastic pollution in schools?</p>
    <button class="quiz-button" onclick="checkAnswer('recycling')">Recycling</button>
    <button class="quiz-button" onclick="checkAnswer('incineration')">Incineration</button>
    <button class="quiz-button" onclick="checkAnswer('burial')">Burial</button>
  </div>

  <div class="result" id="result"></div>

  <div class="progress-bar">
    <div id="progress"></div>
  </div>

  <div class="badge" id="badge">
    <i class="fas fa-trophy"></i> Congratulations! You've earned a badge for completing the quiz.
  </div>

</section>

<script>
  let score = 0;
  let totalQuestions = 1;
  let progressBar = document.getElementById('progress');
  let resultElement = document.getElementById('result');
  let badgeElement = document.getElementById('badge');

  function checkAnswer(answer) {
    if (answer === 'recycling') {
      score++;
      resultElement.textContent = "üéâ Correct! Recycling is an effective way to reduce plastic pollution.";
      resultElement.style.color = 'green';
    } else {
      resultElement.textContent = "‚ùå Incorrect. Try again!";
      resultElement.style.color = '#ff6666';
    }

    updateProgress();
    showBadge();
  }

  function updateProgress() {
    let progressPercentage = (score / totalQuestions) * 100;
    progressBar.style.width = progressPercentage + '%';
  }

  function showBadge() {
    if (score === totalQuestions) {
      badgeElement.classList.add('active');
    }
  }
</script>

</body>
</html>


