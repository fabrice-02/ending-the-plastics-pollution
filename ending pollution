<script>
  function checkAnswer(answer) {
    var resultElement = document.getElementById('result');
    if (answer === 'recycling') {
      resultElement.textContent = "üéâ Congratulations! Recycling is an effective way to reduce plastic pollution.";
      resultElement.style.color = '#00ffcc';
    } else {
      resultElement.textContent = "‚ùå Oops! That's not correct. Try again!";
      resultElement.style.color = '#ff6666';
    }
  }
</script>

