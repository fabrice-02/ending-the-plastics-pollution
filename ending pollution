<script>
  async function submitStoryWithAI() {
    const title = document.getElementById("storyTitle").value;
    const content = document.getElementById("storyContent").value;
    const image = document.getElementById("storyImage").files[0];

    if (title && content) {
      // Call AI to enhance story
      const enhancedContent = await enhanceStoryWithAI(content);

      const reader = new FileReader();
      reader.onload = () => {
        const story = {
          title,
          content: enhancedContent,
          image: reader.result
        };
        stories.push(story);
        displayStories();
      };

      if (image) {
        reader.readAsDataURL(image);
      } else {
        const story = {
          title,
          content: enhancedContent,
          image: null
        };
        stories.push(story);
        displayStories();
      }
    } else {
      alert("Please fill in both title and content!");
    }
  }

  // Function to simulate AI assistance (grammar check, suggestion, idea generation)
  async function askAI(type) {
    let response = '';

    switch(type) {
      case 'suggestion':
        response = await getAISuggestions(); // Call AI to get suggestions
        break;
      case 'grammar':
        response = await checkGrammarWithAI(); // Call AI for grammar check
        break;
      case 'idea-generation':
        response = await generateStoryIdeas(); // Generate new story ideas with AI
        break;
      default:
        response = "How can I assist you?";
    }

    alert(response);
  }

  // Mock AI functions for suggestions, grammar check, and idea generation
  function getAISuggestions() {
    return new Promise((resolve) => {
      setTimeout(() => {
        resolve("AI suggests: Try including a call to action in your story to inspire others.");
      }, 1000);
    });
  }

  function checkGrammarWithAI() {
    return new Promise((resolve) => {
      setTimeout(() => {
        resolve("AI found some minor grammatical errors. Consider revising the sentence structure.");
      }, 1000);
    });
  }

  function generateStoryIdeas() {
    return new Promise((resolve) => {
      setTimeout(() => {
        resolve("AI suggests: How about writing about a community project for cleaning local rivers?");
      }, 1000);
    });
  }
</script>

<style>
  .ai-assistance {
