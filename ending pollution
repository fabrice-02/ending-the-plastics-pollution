<script>
// Example data for jobs and internships
const jobData = [
  {
    title: "Environmental Sustainability Intern",
    category: "Internship",
    description: "Help in the research and development of sustainability programs aimed at reducing plastic pollution.",
    location: "Kigali, Rwanda",
    deadline: "2025-06-30",
  },
  {
    title: "Plastic Waste Management Officer",
    category: "Job",
    description: "Lead the implementation of waste management systems focused on plastic recycling and reduction.",
    location: "Kigali, Rwanda",
    deadline: "2025-05-31",
  },
  {
    title: "AI Data Analyst for Sustainability",
    category: "Internship",
    description: "Work with AI tools to analyze data related to plastic pollution and sustainability efforts.",
    location: "Remote",
    deadline: "2025-07-15",
  },
];

function displayJobListings() {
  const jobListingsContainer = document.getElementById("jobListings");
  jobListingsContainer.innerHTML = ''; // Clear existing listings

  jobData.forEach((job, index) => {
    const jobCard = document.createElement("div");
    jobCard.classList.add("job-card");
    jobCard.innerHTML = `
      <h4>${job.title}</h4>
      <p><strong>Category:</strong> ${job.category}</p>
      <p><strong>Location:</strong> ${job.location}</p>
      <p><strong>Deadline:</strong> ${job.deadline}</p>
      <button onclick="viewJobDetails(${index})">View Details</button>
    `;
    jobListingsContainer.appendChild(jobCard);
  });
}

function viewJobDetails(index) {
  const job = jobData[index];
  document.getElementById("jobTitle").textContent = job.title;
  document.getElementById("jobCategory").textContent = job.category;
  document.getElementById("jobDescription").textContent = job.description;
  document.getElementById("jobLocation").textContent = job.location;
  document.getElementById("jobDeadline").textContent = job.deadline;

  // Open the job details popup
  document.getElementById("jobDetailsPopup").style.display = "block";
}

function closeJobDetails() {
  // Close the job details popup
  document.getElementById("jobDetailsPopup").style.display = "none";
}

function applyForJob() {
  // Open the application form popup
  document.getElementById("applicationForm").style.display = "block";
}

function closeApplicationForm() {
  // Close the application form popup
  document.getElementById("applicationForm").style.display = "none";
}

document.getElementById("applyForm").addEventListener("submit", function (e) {
  e.preventDefault();

  const name = document.getElementById("applicantName").value;
  const email = document.getElementById("applicantEmail").value;
  const resume = document.getElementById("resumeFile").files[0];
  const coverLetter = document.getElementById("coverLetter").value;

  if (name && email && resume && coverLetter) {
    document.getElementById("applicationFeedback").textContent = "Your application has been successfully submitted!";
    document.getElementById("applyForm").reset(); // Reset the form
  } else {
    document.getElementById("applicationFeedback").textContent = "Please fill out all fields and upload your resume.";
  }
});

function filterJobs() {
  const searchQuery = document.getElementById("searchField").value.toLowerCase();
  const filteredJobs = jobData.filter(job =>
    job.title.toLowerCase().includes(searchQuery) ||
    job.category.toLowerCase().includes(searchQuery)
  );

  // Display filtered jobs
  const jobListingsContainer = document.getElementById("jobListings");
  jobListingsContainer.innerHTML = ''; // Clear existing listings

  filteredJobs.forEach((job, index) => {
    const jobCard = document.createElement("div");
    jobCard.classList.add("job-card");
    jobCard.innerHTML = `
      <h4>${job.title}</h4>
      <p><strong>Category:</strong> ${job.category}</p>
      <p><strong>Location:</strong> ${job.location}</p>
      <p><strong>Deadline:</strong> ${job.deadline}</p>
      <button onclick="viewJobDetails(${index})">View Details</button>
    `;
    jobListingsContainer.appendChild(jobCard);
  });
}

// Initially display all job listings
displayJobListings();
</script>

