// Default Language
let currentLanguage = 'en';

// Function to switch language
function changeLanguage() {
  const selectedLanguage = document.getElementById("languageSelect").value;
  currentLanguage = selectedLanguage;
  loadLanguage();
}

// Function to load content based on the selected language
function loadLanguage() {
  const langData = languageData[currentLanguage];

  document.getElementById("section-title").textContent = langData.sectionTitle;
  document.getElementById("section-description").textContent = langData.sectionDescription;
 
  const resourceListContainer = document.getElementById("resourceList");
  resourceListContainer.innerHTML = ''; // Clear existing resources
 
  langData.resources.forEach((resource, index) => {
    const resourceCard = document.createElement("div");
    resourceCard.classList.add("resource-card");
    resourceCard.innerHTML = `
      <h4>${resource.title}</h4>
      <p><strong>${langData.resourceCategoryLabel}</strong> ${resource.category}</p>
      <p><strong>${langData.resourceDescriptionLabel}</strong> ${resource.description}</p>
      <button onclick="viewResourceDetails(${index})">${langData.viewResourceButton}</button>
    `;
    resourceListContainer.appendChild(resourceCard);
  });
}

// Function to view resource details
function viewResourceDetails(index) {
  const langData = languageData[currentLanguage];
  const resource = langData.resources[index];
 
  document.getElementById("resourceTitle").textContent = resource.title;
  document.getElementById("resourceCategory").textContent = resource.category;
  document.getElementById("resourceDescription").textContent = resource.description;
  document.getElementById("resourceLink").href = resource.link;
 
  // Open the resource details popup
  document.getElementById("resourceDetailsPopup").style.display = "block";
}

// Function to close resource details popup
function closeResourceDetails() {
  document.getElementById("resourceDetailsPopup").style.display = "none";
}

// Initialize language on page load
loadLanguage();
</script>

