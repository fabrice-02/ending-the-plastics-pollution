    <h3>Need Help? Ask the AI!</h3>
    <div class="ai-icons">
      <button onclick="askAI('suggestion')">
        <img src="icons/suggestion-icon.png" alt="AI Suggestion" title="Get Story Suggestions">
        <span>Suggestions</span>
      </button>
      <button onclick="askAI('grammar')">
        <img src="icons/grammar-icon.png" alt="AI Grammar Check" title="Grammar Assistance">
        <span>Grammar</span>
      </button>
      <button onclick="askAI('idea-generation')">
        <img src="icons/idea-icon.png" alt="AI Idea Generation" title="Generate Story Ideas">
        <span>Ideas</span>
      </button>
    </div>
  </div>
