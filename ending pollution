<script>
  let score = 1;  // Example score for completing the task
  let totalQuestions = 1;

  // Badge and certificate generation logic
  function generateCertificate() {
    // Check if the user has completed the quiz/task and earned the certificate
    if (score === totalQuestions) {
      document.getElementById('badge').classList.add('active');
    }

    // Generate the certificate PDF using jsPDF
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();

    doc.setFont("helvetica", "normal");
    doc.setFontSize(20);
    doc.text("Certificate of Achievement", 105, 50, null, null, "center");

    doc.setFontSize(16);
    doc.text("This certifies that", 105, 70, null, null, "center");

    doc.setFontSize(18);
    doc.setFont("helvetica", "bold");
    doc.text("[Student's Name]", 105, 90, null, null, "center");

    doc.setFontSize(14);
    doc.setFont("helvetica", "normal");
    doc.text("has successfully completed the EndPlastic Quiz on", 105, 110, null, null, "center");

    doc.setFontSize(16);
    doc.text("Plastic Pollution Prevention", 105, 130, null, null, "center");

    doc.setFontSize(12);
    doc.text("Date: " + new Date().toLocaleDateString(), 105, 160, null, null, "center");

    doc.addImage("https://example.com/badge-image.png", "PNG", 70, 120, 30, 30);  // Replace with a badge image

    // Save the PDF
    doc.save("EndPlastic_Certificate.pdf");
  }
</script>

</body>
