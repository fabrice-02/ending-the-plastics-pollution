<section class="educational-materials">
  <h2>Educational Materials on Plastic Pollution</h2>
  <p>Explore a variety of resources to enhance your knowledge on environmental sustainability and plastic pollution management.</p>

  <!-- Search and Filter Bar -->
  <div class="search-bar">
    <input type="text" id="searchField" placeholder="Search for resources" oninput="filterResources()">
    <select id="categoryFilter" onchange="filterResources()">
      <option value="">All Categories</option>
      <option value="articles">Articles</option>
      <option value="videos">Videos</option>
      <option value="infographics">Infographics</option>
      <option value="case_studies">Case Studies</option>
    </select>
    <button onclick="filterResources()">Search</button>
  </div>

  <!-- Resource Listings -->
  <div class="resource-list" id="resourceList">
    <!-- Resources will be dynamically injected here -->
  </div>

  <!-- Resource Details Popup -->
  <div id="resourceDetailsPopup" class="popup">
    <div class="popup-content">
      <span class="close" onclick="closeResourceDetails()">&times;</span>
      <h3 id="resourceTitle"></h3>
      <p><strong>Category:</strong> <span id="resourceCategory"></span></p>
      <p><strong>Description:</strong> <span id="resourceDescription"></span></p>
      <a id="resourceLink" href="" target="_blank"><button>View Resource</button></a>
    </div>
  </div>
