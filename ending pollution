<script>
  const guidelines = {
    wasteManagement: [
      {
        title: "Reduce Single-Use Plastics",
        description: "Focus on reducing the use of single-use plastics by encouraging reusable items like bags, bottles, and containers.",
        implementation: "Offer incentives for using reusable items and ban single-use plastics in public spaces."
      },
      {
        title: "Proper Waste Segregation",
        description: "Encourage people to sort their waste at the source to improve the recycling process and reduce contamination.",
        implementation: "Provide clearly labeled bins for recycling and general waste, and educate citizens on proper waste segregation."
      }
    ],
    recycling: [
      {
        title: "Promote Recycling Programs",
        description: "Establish or improve recycling facilities and programs in communities to encourage plastic waste recycling.",
        implementation: "Provide bins, organize community recycling events, and incentivize plastic separation."
      },
      {
        title: "Implement Deposit Return Schemes",
        description: "Implement deposit return schemes for plastic bottles to encourage recycling.",
        implementation: "Offer a small refund when plastic bottles are returned to collection centers or vending machines."
      }
    ],
    education: [
      {
        title: "Educate the Public on Plastic Pollution",
        description: "Raise awareness about the harmful effects of plastic pollution and educate people on proper waste management.",
        implementation: "Host workshops, distribute flyers, and use media campaigns to spread awareness."
      },
      {
        title: "Educational Campaigns for Schools",
        description: "Introduce programs and materials in schools to teach students about plastic pollution and its effects.",
        implementation: "Partner with schools to create educational materials and hold environmental events and cleanup drives."
      }
    ],
    alternatives: [
      {
        title: "Support Biodegradable Alternatives",
        description: "Encourage businesses to use biodegradable alternatives to plastic packaging.",
        implementation: "Provide subsidies or tax breaks for businesses that use sustainable packaging alternatives."
      },
      {
        title: "Ban Non-Biodegradable Plastics",
        description: "Introduce legislation that bans certain non-biodegradable plastic products.",
        implementation: "Ban items like plastic straws, cutlery, and certain plastic bags in favor of eco-friendly alternatives."
      }
    ],
    legislation: [
      {
        title: "Enforce Plastic Waste Legislation",
        description: "Introduce laws that ban or limit the production, sale, and use of harmful plastic products.",
        implementation: "Enforce stricter regulations and fines for companies or individuals who violate these laws."
      },
      {
        title: "Extended Producer Responsibility (EPR)",
        description: "Make producers responsible for the entire lifecycle of plastic products, including recycling and waste management.",
        implementation: "Require companies to collect and recycle plastic products after their use or at the end of their life."
      }
    ]
  };

  function toggleCategory(category) {
    const container = document.getElementById('guidelinesContainer');
    container.innerHTML = ''; // Clear existing content

    // Dynamically add guidelines based on the category
    guidelines[category].forEach(guideline => {
      const guidelineElement = document.createElement('div');
      guidelineElement.classList.add('guideline');
      guidelineElement.innerHTML = `
        <h4>${guideline.title}</h4>
        <p>${guideline.description}</p>
        <button onclick="showDetails('${category}', '${guideline.title}')">See Full Details</button>
        <div class="details" id="${category}-${guideline.title.replace(/\s+/g, '')}Details">
          <p><strong>Implementation:</strong> ${guideline.implementation}</p>
        </div>
      `;
      container.appendChild(guidelineElement);
    });
  }

  function showDetails(category, title) {
    const details = document.getElementById(`${category}-${title.replace(/\s+/g, '')}Details`);
    details.style.display = details.style.display === 'none' || details.style.display === '' ? 'block' : 'none';
  }
</script>

