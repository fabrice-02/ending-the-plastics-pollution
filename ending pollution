<h2>Rwanda District Pollution Map</h2>
<div id="map"></div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
  // Initialize map centered on Rwanda
  const map = L.map('map').setView([-1.95, 30.06], 8);

  // Add OpenStreetMap tile layer
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  // Define colors for pollution levels
  const getColor = (level) => {
    switch(level) {
      case "High": return "red";
      case "Medium": return "orange";
      case "Low": return "green";
      default: return "gray";
    }
  };

  // Define Rwanda district data with pollution info
  const pollutionData = [
    { district: "Gasabo", lat: -1.8833, lng: 30.0833, level: "High", description: "High plastic pollution near rivers and markets." },
    { district: "Kicukiro", lat: -1.9956, lng: 30.1147, level: "Medium", description: "Mixed waste from urban centers." },
    { district: "Nyarugenge", lat: -1.9398, lng: 30.0444, level: "Low", description: "Well-maintained city with organized waste bins." },
    { district: "Rubavu", lat: -1.6833, lng: 29.3667, level: "High", description: "Lake Kivu area has floating plastic and shoreline waste." },
    { district: "Musanze", lat: -1.5, lng: 29.6, level: "Medium", description: "Tourist areas managed, but outskirts polluted." },
    { district: "Huye", lat: -2.6, lng: 29.75, level: "Low", description: "Cleaner district due to university efforts." },
    { district: "Rusizi", lat: -2.52, lng: 29.02, level: "High", description: "Industrial waste causing plastic accumulation." },
    // Add more districts as needed
  ];

  // Loop to add color-coded markers for each district
  pollutionData.forEach(d => {
    const marker = L.circleMarker([d.lat, d.lng], {
      color: getColor(d.level),
      radius: 10,
      fillOpacity: 0.8
    }).addTo(map);

    marker.bindPopup(`
      <div class="popup-content">
        <strong>District:</strong> ${d.district}<br>
        <strong>Pollution Level:</strong> <span style="color:${getColor(d.level)};">${d.level}</span><br>
        <p>${d.description}</p>
      </div>
    `);
  });
</script>

