<script>
  // Initialize map centered on Rwanda
  const map = L.map('map').setView([-1.95, 30.06], 8);

  // Add tile layer
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  // Custom pollution icon
  const pollutionIcon = L.icon({
    iconUrl: 'https://cdn-icons-png.flaticon.com/512/684/684908.png', // pollution location icon
    iconSize: [30, 30],
    iconAnchor: [15, 30],
    popupAnchor: [0, -30]
  });

  // Rwanda pollution data
  const pollutionData = [
    {
      district: "Gasabo",
      lat: -1.8833,
      lng: 30.0833,
      level: "High",
      reason: "Plastic accumulation near rivers and markets.",
      solution: "Organize cleanups and install waste bins near riverbanks."
    },
    {
      district: "Kicukiro",
      lat: -1.9956,
      lng: 30.1147,
      level: "Medium",
      reason: "Urban waste mixing with plastics.",
      solution: "Introduce household waste separation and recycling centers."
    },
    {
      district: "Nyarugenge",
      lat: -1.9398,
      lng: 30.0444,
      level: "Low",
      reason: "Well-managed but lacks awareness in schools.",
      solution: "Start school education campaigns on plastic waste."
    },
    {
      district: "Rubavu",
      lat: -1.6833,
      lng: 29.3667,
      level: "High",
      reason: "Plastic floating on Lake Kivu and tourist zones.",
      solution: "Ban single-use plastics around the lake and promote eco-tourism."
    },
    {
      district: "Musanze",
      lat: -1.5,
      lng: 29.6,
      level: "Medium",
      reason: "Pollution from markets and food packaging.",
      solution: "Create biodegradable packaging zones for vendors."
    },
    {
      district: "Huye",
      lat: -2.6,
      lng: 29.75,
      level: "Low",
      reason: "Mostly clean due to student participation.",
      solution: "Expand student-led cleanup programs to rural sectors."
    },
    {
      district: "Rusizi",
      lat: -2.52,
      lng: 29.02,
      level: "High",
      reason: "Industrial plastic dumped without sorting.",
      solution: "Enforce stricter industrial waste disposal regulations."
    }
  ];

  // Add markers with pollution icons and popups
  pollutionData.forEach(d => {
    const marker = L.marker([d.lat, d.lng], { icon: pollutionIcon }).addTo(map);
    marker.bindPopup(`
      <div class="popup-content">
        <strong>District:</strong> ${d.district}<br>
        <strong>Pollution Level:</strong> <span style="color:${d.level === 'High' ? 'red' : d.level === 'Medium' ? 'orange' : 'green'};">${d.level}</span><br><br>
        <strong>Reason:</strong> ${d.reason}<br>
        <strong>Suggested Solution:</strong> ${d.solution}<br>
        <button class="update-btn" onclick="alert('Feature coming soon: Update info for ${d.district}')">‚úèÔ∏è Update Info</button>
      </div>
    `);
  });
</script>
