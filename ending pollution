<script>
// Example data for educational materials
const resources = [
  {
    title: "The Impact of Plastic Pollution",
    category: "articles",
    description: "An article that explains the environmental impact of plastic waste and its effect on ecosystems.",
    link: "https://example.com/plastic-impact",
  },
  {
    title: "Plastic Recycling 101 (Video)",
    category: "videos",
    description: "A short educational video that introduces the concept of plastic recycling and its importance.",
    link: "https://example.com/plastic-recycling-video",
  },
  {
    title: "Plastic Pollution in Oceans (Infographic)",
    category: "infographics",
    description: "A detailed infographic showing the current statistics of plastic pollution in oceans worldwide.",
    link: "https://example.com/plastic-ocean-infographic",
  },
  {
    title: "Global Plastic Waste Management: Case Study",
    category: "case_studies",
    description: "A comprehensive case study on global efforts to reduce plastic waste and improve recycling systems.",
    link: "https://example.com/plastic-waste-case-study",
  }
];

function displayResources() {
  const resourceListContainer = document.getElementById("resourceList");
  resourceListContainer.innerHTML = ''; // Clear existing resources

  resources.forEach((resource, index) => {
    const resourceCard = document.createElement("div");
    resourceCard.classList.add("resource-card");
    resourceCard.innerHTML = `
      <h4>${resource.title}</h4>
      <p><strong>Category:</strong> ${resource.category}</p>
      <p><strong>Description:</strong> ${resource.description}</p>
      <button onclick="viewResourceDetails(${index})">View Details</button>
    `;
    resourceListContainer.appendChild(resourceCard);
  });
}

function viewResourceDetails(index) {
  const resource = resources[index];
  document.getElementById("resourceTitle").textContent = resource.title;
  document.getElementById("resourceCategory").textContent = resource.category;
  document.getElementById("resourceDescription").textContent = resource.description;
  document.getElementById("resourceLink").href = resource.link;

  // Open the resource details popup
  document.getElementById("resourceDetailsPopup").style.display = "block";
}

function closeResourceDetails() {
  // Close the resource details popup
  document.getElementById("resourceDetailsPopup").style.display = "none";
}

function filterResources() {
  const searchQuery = document.getElementById("searchField").value.toLowerCase();
  const selectedCategory = document.getElementById("categoryFilter").value;

  const filteredResources = resources.filter(resource =>
    (resource.title.toLowerCase().includes(searchQuery) ||
    resource.description.toLowerCase().includes(searchQuery)) &&
    (selectedCategory === "" || resource.category === selectedCategory)
  );

  // Display filtered resources
  const resourceListContainer = document.getElementById("resourceList");
  resourceListContainer.innerHTML = ''; // Clear existing listings

  filteredResources.forEach((resource, index) => {
    const resourceCard = document.createElement("div");
    resourceCard.classList.add("resource-card");
    resourceCard.innerHTML = `
      <h4>${resource.title}</h4>
      <p><strong>Category:</strong> ${resource.category}</p>
      <p><strong>Description:</strong> ${resource.description}</p>
      <button onclick="viewResourceDetails(${index})">View Details</button>
    `;
    resourceListContainer.appendChild(resourceCard);
  });
}

// Initially display all resources
displayResources();
</script>

