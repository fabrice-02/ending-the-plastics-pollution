<script>
  const projects = [];

  // Function to display the submitted projects
  function displayProjects() {
    const projectsGrid = document.getElementById("projectsGrid");
    projectsGrid.innerHTML = "";

    projects.forEach((project, index) => {
      const projectCard = document.createElement("div");
      projectCard.classList.add("project-card");

      const projectImage = document.createElement("img");
      projectImage.src = project.image || "https://via.placeholder.com/300";
      projectImage.alt = project.title;

      const projectTitle = document.createElement("h3");
      projectTitle.classList.add("project-title");
      projectTitle.textContent = project.title;

      const projectDescription = document.createElement("p");
      projectDescription.classList.add("project-description");
      projectDescription.textContent = project.description;

      const voteButton = document.createElement("button");
      voteButton.classList.add("vote-btn");
      voteButton.textContent = "Vote for this Project";
      voteButton.onclick = () => voteForProject(index);

      const voteCount = document.createElement("div");
      voteCount.classList.add("vote-count");
      voteCount.textContent = `Votes: ${project.votes}`;

      projectCard.appendChild(projectImage);
      projectCard.appendChild(projectTitle);
      projectCard.appendChild(projectDescription);
      projectCard.appendChild(voteButton);
      projectCard.appendChild(voteCount);

      projectsGrid.appendChild(projectCard);
    });
  }

  // Function to submit a new project
  function submitProject() {
    const title = document.getElementById("projectTitle").value;
    const description = document.getElementById("projectDescription").value;
    const image = document.getElementById("projectImage").files[0];

    if (title && description) {
      const reader = new FileReader();
      reader.onload = () => {
        const project = {
          title,
          description,
          image: reader.result,
          votes: 0
        };
        projects.push(project);
        displayProjects();
      };

      if (image) {
        reader.readAsDataURL(image);
      } else {
        // If no image, create an empty project with no image
        const project = {
          title,
          description,
          image: null,
          votes: 0
        };
        projects.push(project);
        displayProjects();
      }
    } else {
      alert("Please fill in both title and description!");
    }
  }

  // Function to vote for a project
  function voteForProject(index) {
    projects[index].votes++;
    displayProjects();
  }
</script>

</body>
</html>

